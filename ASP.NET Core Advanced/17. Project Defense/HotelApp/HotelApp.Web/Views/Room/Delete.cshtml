@using HotelApp.Web.ViewModels.Room
@model RoomDeleteViewModel

@{
    ViewData["Title"] = "Delete Room";
}

<h1>Delete Room: Room @Model.RoomNumber</h1>

<p>Are you sure you want to delete this room?</p>

@if (Model.IsAssociated)
{
    <p>This room is currently linked to the following hotel:</p>
    <ul>
        <li><strong>Hotel Name:</strong> @Model.HotelName</li>
        <li><strong>Hotel Address:</strong> @Model.HotelAddress</li>
    </ul>
    <p>Deleting this room will mark the associated room as deleted.</p>
}
else
{
    <p>This room is not linked to any hotel. Deleting it will mark the room as deleted.</p>
}

<form method="post">
    <input type="hidden" name="roomId" value="@Model.RoomId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Room")" class="btn btn-secondary">Cancel</a>
</form>