@using HotelApp.Web.ViewModels.Hotel
@model IEnumerable<HotelIndexViewModel>

@{
    ViewData["Title"] = "All Hotels";
}

<h2>Hotels</h2>

<a asp-action="Create" class="btn btn-success mb-4">Add New Hotel</a>

<div class="row">
    @foreach (var hotel in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">

                <img src="@(!string.IsNullOrWhiteSpace(hotel.ImageURL) ? hotel.ImageURL : Url.Content("~/images/no-image.png"))"
                     class="card-img-top" alt="Image of hotel @hotel.Name" style="height: 200px; object-fit: cover;" />

                <div class="card-body">

                    <h2 class="card-title">@hotel.Name</h2>
                    <h5 class="card-subtitle mb-2 text-muted">@hotel.Address</h5>

                    <div class="d-flex gap-2 mt-3">
                        <a asp-action="Details" asp-route-id="@hotel.Id" class="btn btn-primary">View Details</a>
                        <a asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-warning">Edit Hotel</a>

                        <form asp-action="Delete" asp-route-id="@hotel.Id" method="post"
                        onsubmit="return confirm('Are you sure you want to delete this hotel?');" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete Hotel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
